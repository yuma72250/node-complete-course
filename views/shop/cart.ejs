        <%- include('../includes/head.ejs') %>
        <link rel="stylesheet" href="/css/product.css">

    </head>

    <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(products.length > 0) { %>
            <div class="grid">
                <% for (let product of products) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.productData.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.productData.imageUrl %>" alt="<%= product.productData.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$ <%= product.productData.price %></h2>
                            <p class="product__description"><%= product.productData.description %></p>
                            <h4 style="text-align: center;">Quantity: <%= product.qty %> </h4>
                        </div>
                        <form action="/cart-delete-item" method="POST">
                            <div class="card__actions">
                                <button class="btn" type="submit">Delete</button>
                                <input type="hidden" name="productId" value="<%= product.productData.id %>">
                            </div>
                        </form>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products in Cart !</h1>
        <% } %> 
    </main>
    <%- include('../includes/end.ejs') %>